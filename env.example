# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/momentverse?pgbouncer=true&connection_limit=10&pool_timeout=5"

# Authentication
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters"
NEXTAUTH_URL="https://your-domain.com"

# Redis Configuration (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-token"

# Stripe Configuration
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@your-domain.com"

# Monitoring and Analytics
SENTRY_DSN="https://your-sentry-dsn.ingest.sentry.io/..."
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_APP_NAME="MomentVerse"

# Security
CORS_ORIGIN="https://your-domain.com"
SESSION_SECRET="another-super-secret-key-here"

# Performance
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_DEBUG="false"

# File Upload (if using cloud storage)
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Optional: OpenAI for AI features
OPENAI_API_KEY="sk-..."

# Optional: CDN Configuration
NEXT_PUBLIC_CDN_URL="https://cdn.your-domain.com"

# Pricing Configuration
BASE_SECOND_PRICE="5"
PER_MINUTE_EXTRA="0.05"
STAR_ADDON="3"
PREMIUM_CERT_ADDON="6" 